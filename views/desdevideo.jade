extends layout

block content
    .col-xs-12.col-md-6
        video.img-responsive(id="#{video._id}", poster="/images/#{video.screenshot}", class="video-js", controls preload="auto")
            source(src="/videos/#{video.nombre}", type='video/mp4')
            p.vjs-no-js To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
        .col-xs-12
            div#range-#{video.filename}
                div(style="padding: 1em;")
                    span#desde(style="float: left;")
                    span#hasta.pull-right
            input(class="form-control", id="texto", placeholder="Ingrese el texto aqu√≠")
